<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/divider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/cvMember"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            tools:layout_editor_absoluteY="31dp"
            tools:layout_editor_absoluteX="297dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvNameMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:layout_constraintRight_toLeftOf="@+id/cvMember"
            app:layout_constraintTop_toTopOf="@+id/cvMember" />

        <ImageButton
            android:id="@+id/ibDeleteMember"
            android:layout_width="56dp"
            android:layout_height="58dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cvMember"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvNameMember"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_delete" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>